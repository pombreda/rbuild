loadInstalled('python')
class rBuild(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rbuild'
    version = '1.2.x'

    buildRequires = [
        'rpath-product-definition:python',
        'rpath-common:python',
        'python:devel',
        'python:runtime',
        'rmake:python',
        'util-linux:runtime',
        'mercurial:runtime',
        'robj:python',
    ]

    def setup(r):
        r.setDefaultPython()
        #r.addArchive('ftp://download.rpath.com/rbuild/')
        r.addMercurialSnapshot('http://hg.rpath.com/rbuild')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
