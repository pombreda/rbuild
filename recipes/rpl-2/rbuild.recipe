class rBuild(BuildPackageRecipe):
    name = 'rbuild'
    version = '1.2.x'

    buildRequires = [
        'rpath-product-definition:python',
        'rpath-common:python',
        'python:devel',
        'rmake:python',
        'util-linux:runtime',
        'mercurial:runtime',
        'robj:python',
    ]

    def setup(r):
        r.addMercurialSnapshot('http://hg.rpath.com/rbuild/')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
